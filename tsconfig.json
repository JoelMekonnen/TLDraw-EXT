{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "module": "commonjs",
   "lib": [
      "dom",
      "dom.iterable",
      "ESNext",
      "ES6",
    ],
    "types": [
      "@extpkg/types-console",
      "@extpkg/types-runtime",
      "@extpkg/types-tabs",
      "@extpkg/types-websessions",
      "@extpkg/types-webviews",
      "@extpkg/types-windows"
    ]
  },
  "include": ["./src/main.ts", "./src/TLDraw-folder/index.tsx"]
}
